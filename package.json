{
  "name": "odoo-toolbox",
  "version": "0.1.0",
  "private": true,
  "description": "TypeScript infrastructure-as-code toolkit for Odoo ERP",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/odoo-toolbox.git"
  },
  "keywords": [
    "odoo",
    "erp",
    "typescript",
    "infrastructure-as-code",
    "state-management",
    "drift-detection"
  ],
  "author": "Marc",
  "license": "LGPL-3.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "jest",
    "test:unit": "jest --selectProjects=unit",
    "test:integration": "jest --selectProjects=integration",
    "test:full": "jest --selectProjects=unit --selectProjects=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "KEEP_CONTAINERS=true jest --runInBand --verbose",
    "test:local": "act --secret-file .env.test",
    "docker:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:down": "docker-compose -f docker-compose.test.yml down",
    "docker:clean": "docker-compose -f docker-compose.test.yml down -v",
    "docker:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "clean": "rm -rf packages/*/dist"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
