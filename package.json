{
  "name": "odoo-toolbox",
  "version": "0.1.0",
  "private": true,
  "description": "TypeScript infrastructure-as-code toolkit for Odoo ERP",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/odoo-toolbox.git"
  },
  "keywords": [
    "odoo",
    "erp",
    "typescript",
    "infrastructure-as-code",
    "state-management",
    "drift-detection"
  ],
  "author": "Marc",
  "license": "LGPL-3.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "clean": "rm -rf packages/*/dist"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
